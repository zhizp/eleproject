	@Override
	public int delSegmentInfobyIds(String[] ids, int userid) {
		int rs = 0;
		for(String id:ids){
			SegmentInfoDTO unit = new SegmentInfoDTO();
			unit.setId(Integer.parseInt(id));
			unit.setOperatorid(userid);
			rs += segmentInfoDao.delSegmentInfoId(unit);
		}
		return rs;
	}

